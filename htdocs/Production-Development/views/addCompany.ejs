<div class="">
    <div class="row">

        <div class="container" style="padding-top: 60px;">
            <h1 class="page-header">Add Company</h1>
            <div class="row">
                <!-- left column -->
                <!--<div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="text-center admin-profile">
                        <img src="/images/img.jpg" class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>Upload a different photo...</h6>
                        <input type="file" class="text-center center-block well well-sm">
                    </div>
                </div>-->
                <!-- edit form column -->
                <div class="col-md-7 col-sm-6 col-xs-12 personal-info">

                    <h3>Company info</h3>
                    <% if(success){ %>
                    <div class="alert alert-success" role="alert">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Company Record Added Successfully
                    </div>
                    <% } %>
                    <form id="add_comp" class="form-horizontal" role="form" method="post" action="/company/add">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Company Name:</label>
                            <div class="col-lg-8">
                                <input class="form-control" required="true" name="comp_name" value="" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Web Url:</label>
                            <div class="col-lg-8">
                                <input class="form-control" required="true" name="web_url" value="" type="text">
                            </div>
                        </div>
                        <input class="form-control" type="hidden" name="logo" value="company_default.png" type="text">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Contact No:</label>
                            <div class="col-lg-8">
                                <input class="form-control" required="true" name="contact_no" value="" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Address:</label>
                            <div class="col-lg-8">
                                <input class="form-control" required="true" name="address" value="" type="text">
                            </div>
                        </div>

                        <input class="form-control" name="is_active" value="1" type="hidden">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Admin Email:</label>
                            <div class="col-md-8">
                                <input class="form-control" required="true" name="contact_email" value="" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                                <input class="btn btn-primary" value="Add" type="submit">
                                <span></span>
                                <input class="btn btn-default" value="Reset" type="reset">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
